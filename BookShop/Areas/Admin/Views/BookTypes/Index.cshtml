@using BookShop.Models
@model IEnumerable<CBookTypes>
@{
    ViewData["Title"] = "Index";
}

<br />
<br />

<div class="form-group row">
    <div class="col-6">
        <h3 class="text-primary">Book Types List</h3>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-primary">&nbsp;Add new Book Types</a>
    </div>
</div>

<br />
<br />
<div>
    <table class="table table-striped border">
        <tr class="text-info">
         <th>
             @Html.DisplayNameFor(c=>c.BookTypes)
          </th>
          <th></th>
          <th></th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.BookTypes</td>
                
                <td>
                    <partial name="_ButtenPertial" model="@item.Id"></partial>
                </td>
            </tr>
        }
    </table>
</div>