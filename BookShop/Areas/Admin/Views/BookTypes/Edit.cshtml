    ViewData["Title"] = "Edit";
}

<br />
<br />

<h3 class="text-primary">Edit Book Types</h3>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group row">
        <div class="col-1">
            <label asp-for="BookTypes"></label>
        </div>
