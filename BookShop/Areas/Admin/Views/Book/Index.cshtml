@using BookShop.Models;
@model IEnumerable<CBook>
@{
    ViewData["Title"] = "Index";
}

<br /><br />
<div class="row">
    <div class="col-8">
        <h2 class="text-info">Book List</h2>
    </div>
    <div class="col-4 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp;Add New Book </a>
    </div>
</div>
<br />
<div>

    <form method="post">
    <div class="row">
        <div class="col-3">
            <h4>Low Amount</h4>
            <input type="number" class="form-control" name="lowAmount"/>
        </div>
        <div class="col-3">
            <h4>Large Amount</h4>
            <input type="number" class="form-control" name="largeAmount"/>
        </div>
        <div class="col-3">
            <br />
            <input type="submit" value="Search" class="btn btn-success"/>
        </div>
        <div class="col-3"></div>
    </div>
</form>
<br />
<br />
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(c => c.Name)
            </th>
            <th>
                @Html.DisplayNameFor(c => c.Price)
            </th>
            <th>
                @Html.DisplayNameFor(c => c.IsAvailable)
            </th>
            <th>
                @Html.DisplayNameFor(c => c.BookTypeId)
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.IsAvailable</td>
                    <td>@item.BookTypes.BookTypes</td>
                    <td>
                       <partial name="_ButtenPertial" model="@item.Id" />
                    </td>
                </tr>
        }
    </table>
</div>

@section scripts{
        <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.11.2/build/alertify.min.js"></script>
        <script type="text/javascript">
            $(function(){
                var save = '@TempData["save"]'
                if(save!='') {
                    alertify.success(save);
                }
                var edit = '@TempData["edit"]'
                if(edit!='') {
                    alertify.success(edit);
                }
                var del = '@TempData["delete"]'
                if (del!='') {
                    alertify.error(del);
                }
            })
        </script>
}


